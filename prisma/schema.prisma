// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Program {
  id          String   @id
  title       String
  description String   @default("")
  imageUrl    String
  linkUrl     String?
  linkText    String?
  status      Status   @default(ACTIVE)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("programs")
}

model HeroSlide {
  id           String   @id
  title        String
  subtitle     String?
  description  String?
  imageUrl     String
  linkUrl      String?
  linkText     String?
  status       Status   @default(ACTIVE)
  displayOrder Int      @default(0)
  duration     Int      @default(15000)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("hero_slides")
}

model Event {
  id               String   @id
  title            String
  description      String?
  poster           String?  // Cloudinary URL for poster image
  video            String?  // Video URL (Cloudinary/YouTube/local)
  thumbnail        String?  // Cloudinary URL for video thumbnail
  registrationLink String?
  startDate        DateTime
  endDate          DateTime
  expiryDate       DateTime // When event details should be removed
  summary          String[] // Array of summary points
  tags             String[] // Simple tags array
  status           Status   @default(ACTIVE)
  order            Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("events")
}

enum Status {
  ACTIVE
  INACTIVE

  @@map("status")
}